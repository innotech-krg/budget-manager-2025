# =====================================================
# Budget Manager 2025 - Test Environment Variables
# Test-spezifische Konfiguration
# =====================================================

# Test Environment
NODE_ENV=test
PORT=3002

# Mock Database URLs
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=test-anon-key
SUPABASE_SERVICE_ROLE_KEY=test-service-key
DATABASE_URL=postgresql://test:test@localhost:5432/budget_manager_test

# German Business Configuration
DEFAULT_CURRENCY=EUR
DEFAULT_LOCALE=de-DE
BUSINESS_COUNTRY=Deutschland

# Disable external services in tests
ENABLE_AUDIT_LOGGING=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_EXTERNAL_API_CALLS=false

# Test-specific settings
LOG_LEVEL=error
ENABLE_CORS_ALL_ORIGINS=true
RATE_LIMIT_WINDOW_MS=1000
RATE_LIMIT_MAX_REQUESTS=10000